<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title><%= title || 'Helpers List' %></title>

  <!-- Bootstrap 5 CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

  <!-- Your common CSS -->
  <link rel="stylesheet" href="/css/style.css" />
</head>
<body>
  <%- include('../partials/navbar', { user: user, isAuthenticated: isAuthenticated }) %>

  <main class="py-4">
    <div class="container">
      <div class="row mb-5">
        <div class="col-12 text-center">
          <h1 class="custom-heading">
            <span class="custom-category-icon"><%= category?.icon || '' %></span>
            <%= category?.name || 'Category' %>
          </h1>
          <p class="lead text-muted">Choose from our verified <%= (category?.name || 'category').toLowerCase() %> professionals</p>
        </div>
      </div>
      <% if (!helpers || helpers.length === 0) { %>
        <div class="row">
          <div class="col-12">
            <div class="alert alert-info text-center mx-auto" style="max-width: 500px;">
              <h4 class="fw-bold mb-2">No helpers available yet</h4>
              <p class="mb-3">We're working to add more <%= (category?.name || 'category').toLowerCase() %> to this category.</p>
              <a href="/category" class="btn btn-primary">Browse Other Categories</a>
            </div>
          </div>
        </div>
      <% } %>
      <% if (helpers && helpers.length > 0) { %>
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
          <% helpers.forEach(helper => { %>
            <div class="col d-flex">
              <div class="card shadow border-0 w-100 d-flex flex-column text-center">
                <div class="position-relative pt-4">
                  <img src="<%= helper.imageURL || '/images/default-user.png' %>" 
                       alt="Profile of <%= helper.name || 'Helper' %>" 
                       class="rounded-circle mx-auto"
                       style="width: 120px; height: 120px; object-fit: cover; border: 4px solid #fff; box-shadow: 0 0 6px rgba(0,0,0,0.1);" />
                  <span class="badge position-absolute top-0 end-0 m-3 px-3 py-2 fs-7 fw-semibold 
                        <%= helper.availability === 'available' ? 'bg-success' : 'bg-danger' %>">
                    <%= helper.availability === 'available' ? 'Available' : 'Busy' %>
                  </span>
                </div>
                <div class="card-body d-flex flex-column">
                  <h5 class="fw-bold text-primary mb-1"><%= helper.name || 'N/A' %></h5>
                  <% const rating = helper.rating || 0; %>
                  <div class="mb-2 text-warning small">
                    <% for (let i = 1; i <= 5; i++) { %>
                      <% if (i <= rating) { %><span>&#9733;</span><% } else { %><span style="color:#ddd">&#9733;</span><% } %>
                    <% } %>
                    <span class="text-muted">(<%= rating.toFixed(1) %>)</span>
                  </div>
                  <div class="text-muted mb-2">
                    <%= helper.location?.area || 'Area N/A' %>, <%= helper.location?.city || 'City N/A' %>
                  </div>
                  <div class="mb-3 small text-secondary">
                    <%= helper.experience || 0 %> years Exp | â‚¹<%= helper.hourlyRate || '0' %>/hr
                  </div>
                  <a href="/category/<%= categoryName || '' %>/helper/<%= helper._id %>" class="btn btn-primary w-100 fw-bold mt-auto">
                    View Profile
                  </a>
                </div>
              </div>
            </div>
          <% }); %>
        </div>
        <div class="row mt-4">
          <div class="col-12 text-center">
            <p class="text-muted">
              Showing <span class="fw-bold"><%= helpers.length %></span> 
              <%= (category?.name || 'category').toLowerCase() %><%= helpers.length === 1 ? '' : 's' %> in your area
            </p>
          </div>
        </div>
      <% } %>
      <div class="row mt-5">
        <div class="col-12 text-center">
          <a href="/category" class="btn btn-outline-primary btn-lg px-4">Browse All Categories</a>
        </div>
      </div>

    </div>
  </main>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
