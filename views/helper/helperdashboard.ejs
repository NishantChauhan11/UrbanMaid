<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/style.css" />
  <link rel="stylesheet" href="/css/navbar.css" />
  <link rel="stylesheet" href="/css/helperdashboard.css" />
</head>
<body>
  <%- include('../partials/navbar', { user: user, isAuthenticated: isAuthenticated }) %>
  <div class="container mt-5">
    <h2 class="mb-4"><%= title %></h2>
    <% if (showJoinHelper) { %>
      <div class="alert alert-warning mb-3">
        Your profile is incomplete. Please 
        <a href="/helper/profile" class="btn btn-sm btn-primary ms-2">Complete your profile</a> to access your bookings.
      </div>
    <% } else { %>
      <% if (!bookings || bookings.length === 0) { %>
        <p>No booking requests.</p>
      <% } else { %>
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>Booking ID</th>
              <th>User</th>
              <th>Booking Date</th>
              <th>Start Time</th>
              <th>Duration (hours)</th>
              <th>Total Amount</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% bookings.forEach(function(booking) { %>
              <tr>
                <td><%= booking._id %></td>
                <td><%= booking.userId?.name || 'N/A' %></td>
                <td><%= booking.bookingDate instanceof Date ? booking.bookingDate.toLocaleDateString('en-IN') : booking.bookingDate %></td>
                <td><%= booking.startTime %></td>
                <td><%= booking.duration %></td>
                <td>â‚¹<%= booking.totalAmount.toFixed(2) %></td>
                <td><%= booking.status %></td>
                <td>
                  <% if(booking.status === 'pending') { %>
                    <form action="/booking/<%= booking._id %>/accept" method="POST" style="display:inline;">
                      <button class="btn btn-success btn-sm">Accept</button>
                    </form>
                    <form action="/booking/<%= booking._id %>/reject" method="POST" style="display:inline;">
                      <button class="btn btn-danger btn-sm">Reject</button>
                    </form>
                  <% } else { %>
                    <span><%= booking.status %></span>
                  <% } %>
                  <form action="/helper/delete-booking/<%= booking._id %>" method="POST" style="display:inline;" onsubmit="return confirm('Delete this booking request?');">
                    <button class="btn btn-danger btn-sm ms-2" type="submit">Delete</button>
                  </form>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      <% } %>
    <% } %>
  </div>
</body>
</html>

